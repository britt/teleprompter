{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "types": [
			"@cloudflare/workers-types/2023-07-01",
      "jest",
      "./src/index.d.ts"
		],		
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false,
		"isolatedModules": true,
    "jsx": "react-jsx",
    "module": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}